{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "es2015",
            "dom"
        ],
        "rootDir": "./",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "types": [
            "node"
        ],
        "stripInternal": true,
        "incremental": true,
        "skipLibCheck": true
    },
    "include": [
        "scripts/**/*"
    ]
}
